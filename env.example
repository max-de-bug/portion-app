# Portion App Environment Variables
# Copy this file to .env.local and fill in values

# ===================
# Frontend
# ===================

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Solana RPC URL (Required for production/reliable Mainnet access)
# If left blank, it will fall back to public endpoints which are rate-limited (403 errors)
NEXT_PUBLIC_SOLANA_MAINNET_RPC_URL=
NEXT_PUBLIC_SOLANA_DEVNET_RPC_URL=
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# ===================
# Solomon Labs Tokens (Optional - app works in demo mode without these)
# ===================

# sUSDV token mint address on Solana
SUSDV_MINT=

# USDV token mint address on Solana  
USDV_MINT=
